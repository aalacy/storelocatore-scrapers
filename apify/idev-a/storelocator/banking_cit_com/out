<script>
    window.googleTrusted = function() {
        if (window.renderBadge) {
            window.renderBadge();
        }
        if (window.renderOptIn) {
            window.renderOptIn();
        }
    }
    window.renderBadge = function() {
        var ratingBadgeContainer = document.createElement('div');
        document.body.appendChild(ratingBadgeContainer);
        window.gapi.load('ratingbadge', function() {
            window.gapi.ratingbadge.render(ratingBadgeContainer, {'merchant_id': 103017495, 'position': 'BOTTOM_LEFT'});
        });
    }
</script>
