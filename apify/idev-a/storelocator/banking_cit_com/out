    <script>
        require([
                'jquery',
                'Mirasvit_SearchAutocomplete/js/autocomplete',
                'Mirasvit_SearchAutocomplete/js/typeahead',
                'ko'
            ], function ($, autocomplete, typeahead, ko) {
                var selector = 'input#search, input#mobile_search, .minisearch input[type="text"]';

                autocomplete.prototype.ensurePosition = function () {
                    var position = this.$input.position();
                    var top = position.top + parseInt(this.$input.css('marginTop'), 10);

                    this.$placeholder()
                        .css('top', this.$input.outerHeight() - 1 + top);
                }

                autocomplete.prototype._doSearch = function (query) {
                    this.isVisible = true;

                    this.$spinner().show();

                    var catId = $('#search-category').val();

                    if (catId === '') {
                        catId = false
                    }

                    this.xhr = $.ajax({
                        url:      this.config.url,
                        dataType: 'json',
                        type:     'GET',
                        data:     {
                            q:        query,
                            store_id: this.config.storeId,
                            cat:      catId
                        },
                        success:  function (data) {
                            this.processApplyBinding(data);

                            this.$spinner().hide();
                        }.bind(this)
                    });
                }

                autocomplete.prototype.processApplyBinding = function (data) {
                    if (this.$wrapper().length > 0) {
                        if (!!ko.dataFor(this.$wrapper())) {
                            ko.cleanNode(this.$wrapper());
                        }
                    }

                    this.$wrapper().remove();

                    var wrapper = $('#searchAutocompleteWrapper').html();

                    this.$placeholder().append(wrapper);

                    ko.applyBindings(this.viewModel(data), this.$wrapper()[0]);

                    if (this.config.layout == '2columns'
                        && data.indices !== undefined
                        && Object.keys(data.indices).length > 1
                    ) {
                        var result = {};
                        data.indices.forEach(function (index) {
                            if (index.items.length > 0) {
                                result[index.identifier] = index.items.length;
                            }
                        });

                        if (Object.keys(result).length > 1 && typeof result.magento_catalog_product != 'undefined') {
                            this.$placeholder().addClass(this.additionalColumnSelector);
                        } else {
                            this.$placeholder().removeClass(this.additionalColumnSelector);
                        }
                    }


                    this.ensurePosition();
                };

                $(document).ready(function () {
                    var $input = $(selector);

                    $input.each(function (index, searchInput) {
                        
                        new autocomplete($(searchInput)).init({"query":"","priceFormat":{"pattern":"\u00a3%s","precision":2,"requiredPrecision":2,"decimalSymbol":".","groupSymbol":",","groupLength":3,"integerRequired":false},"minSearchLength":3,"url":"https:\/\/www.thbaker.co.uk\/thbautocomplete\/ajax\/suggest\/","storeId":"1","delay":300,"layout":"2columns","popularTitle":"Hot Searches","popularSearches":["St christopher","Gucci bracelets","Gucci","Necklace","Rings"],"isTypeaheadEnabled":"0","typeaheadUrl":"https:\/\/www.thbaker.co.uk\/searchautocomplete\/ajax\/typeahead\/"});
                    });
                });
            }
        );
    </script>

